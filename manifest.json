{
    "manifest_version": 3,
    "name": "Telestai Signature Browser Extension",
    "version": "1.0",
    "description": "A proof-of-concept browser extension to interact with the Telestai core wallet via RPC and sign messages.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  